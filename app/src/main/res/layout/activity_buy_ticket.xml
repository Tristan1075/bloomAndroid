<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/buy_ticket_activity_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            tools:srcCompat="@tools:sample/avatars" />
        <LinearLayout
            android:id="@+id/buy_ticket_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingVertical="10sp"
            android:paddingHorizontal="20sp"
            >
            <TextView
                android:id="@+id/buy_ticket_activity_name_textView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorBackgroundLighter"
                android:textSize="16sp"
                android:layout_weight="2.7"
                android:fontFamily="@font/open_sans_light"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/buy_ticket_activity_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textColor="@color/colorBackgroundLighter"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¬"
                android:layout_marginEnd="0sp"
                android:textColor="@color/colorBackgroundLighter"
                android:textSize="16sp"
                android:fontFamily="@font/open_sans_semi_bold"
                android:layout_weight="0.3"
                android:textStyle="bold"
                />

        </LinearLayout>
        <Button
            android:id="@+id/buy_ticket_activity_promotional_code_button"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="10sp"
            android:background="@android:color/transparent"
            android:text="You have a promotional code ?"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/buy_ticket_activity_promotionalCode_editText"
            android:layout_width="200sp"
            android:textAllCaps="true"
            android:text="PROMO"
            android:textSize="10sp"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/white"
            android:layout_height="30sp"
            android:padding="5sp"
            android:paddingStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/border_event_lighter"
            />
        <ImageView
            android:id="@+id/buy_ticket_activity_valid_promotional_code"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/border_button_pink"
            android:padding="5sp"
            android:src="@drawable/ic_check_black_24dp"
            />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/buy_ticket_activity_pay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay this ticket"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/white"
        android:background="@drawable/border_button_pink"
        android:drawableEnd="@drawable/ic_credit_card_black_24dp"
        android:layout_margin="20sp"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:layout_gravity="bottom"
        />
</android.support.design.widget.CoordinatorLayout>