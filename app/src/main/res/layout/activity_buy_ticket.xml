<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/buy_ticket_activity_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        tools:srcCompat="@tools:sample/avatars" />
    <LinearLayout
        android:id="@+id/buy_ticket_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignBottom="@id/buy_ticket_activity_imageView"
        android:padding="10sp"
        >
        <TextView
            android:id="@+id/buy_ticket_activity_name_textView"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorBackgroundLighter"
            android:textSize="16sp"
            android:layout_weight="2.7"
            android:fontFamily="@font/open_sans_light"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/buy_ticket_activity_price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textColor="@color/colorBackgroundLighter"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬"
            android:layout_marginEnd="0sp"
            android:textColor="@color/colorBackgroundLighter"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:layout_weight="0.3"
            android:textStyle="bold"
            />
    </LinearLayout>
    <Button
        android:id="@+id/buy_ticket_activity_pay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay this ticket"
        android:textColor="@color/white"
        android:background="@drawable/border_button_pink"
        android:drawableRight="@drawable/ic_credit_card_black_24dp"
        android:layout_margin="20sp"
        android:paddingRight="20sp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>