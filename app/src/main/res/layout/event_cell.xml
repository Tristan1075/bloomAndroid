<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="@drawable/border_event"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_activity_event_image_view"
        android:layout_width="fill_parent"
        android:layout_height="170sp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:background="@color/colorBackgroundLighter"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/home_activity_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/textGray"
            android:text="Vendredi, 14 Juin . 23h"
            />
        <TextView
            android:id="@+id/home_activity_event_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="Embuscade 2Nd Anniversary"
            />
        <TextView
            android:id="@+id/home_activity_collectif_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L'embuscade"
            android:textSize="10sp"
            android:textColor="@color/textBlue"
            android:fontFamily="@font/open_sans_light"
            />
    </LinearLayout>
</LinearLayout>