<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20sp"
        android:orientation="vertical"
        tools:context=".data.service.views.DetailEventActivity">
        <ImageView
            android:id="@+id/detail_event_activity_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20sp"
            android:background="@drawable/border_event_lighter"
            >
            <TextView
                android:id="@+id/detail_event_activity_description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:padding="10sp"
                android:maxLines="4"
                android:fontFamily="@font/open_sans_light"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/detail_event_activity_see_more_button"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:background="@android:color/transparent"
                android:text="See more..."
                android:textSize="12sp"
                android:textAllCaps="false"
                android:fontFamily="@font/open_sans_light"
                android:textColor="@color/colorAccent"
                />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/details_event_activity_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            tools:itemCount="3"
            tools:listitem="@layout/ticket_cell" />
        <TextView
            android:id="@+id/saaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:padding="10sp"
            android:background="@drawable/border_event"
            />
    </LinearLayout>
</ScrollView>